<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_personal_phoneNm_te"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/edit_personal_logo"
        android:layout_width="259dp"
        android:layout_height="190dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/edit_personal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anton"
        android:text="EDIT DETAILS"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_personal_userNm_et"
        app:layout_constraintEnd_toEndOf="@+id/edit_personal_logo"
        app:layout_constraintStart_toStartOf="@+id/edit_personal_logo"
        app:layout_constraintTop_toBottomOf="@+id/edit_personal_logo" />

    <TextView
        android:id="@+id/edit_personal_userNm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/anton"
        android:text="User name"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_personal_logo" />

    <TextView
        android:id="@+id/edit_personal_mailAdd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/anton"
        android:text="Mail address"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/edit_personal_userNm_tv"
        app:layout_constraintTop_toBottomOf="@+id/edit_personal_userNm_tv" />

    <TextView
        android:id="@+id/edit_personal_phoneNm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/anton"
        android:text="Phone number"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/edit_personal_mailAdd_tv"
        app:layout_constraintTop_toBottomOf="@+id/edit_personal_mailAdd_tv" />

    <EditText
        android:id="@+id/edit_personal_userNm_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_personal_userNm_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_personal_userNm_tv" />

    <EditText
        android:id="@+id/edit_personal_userNm_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_personal_mailAdd_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_personal_userNm_et" />

    <EditText
        android:id="@+id/edit_personal_phone_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_personal_phoneNm_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_personal_userNm_et" />

    <Button
        android:id="@+id/edit_personal_cncl_btn"
        android:layout_width="167dp"
        android:layout_height="67dp"
        android:backgroundTint="#D51B2FA3"
        android:fontFamily="@font/anton"
        android:text="CANCEL"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_personal_save_btn"
        app:layout_constraintEnd_toStartOf="@+id/edit_personal_save_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/edit_personal_save_btn"
        android:layout_width="167dp"
        android:layout_height="67dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#D51B2FA3"
        android:fontFamily="@font/anton"
        android:text="SAVE"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edit_personal_cncl_btn"
        app:layout_constraintTop_toBottomOf="@+id/edit_personal_phone_et" />

</androidx.constraintlayout.widget.ConstraintLayout>